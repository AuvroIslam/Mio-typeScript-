rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default rule - deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Archives - allow authenticated users to read them
    // Since we're using security at the application level
    match /archives/{conversationId}/{fileName} {
      // Allow read if user is authenticated
      allow read: if request.auth != null;
      
      // Only allow Firebase Functions to write
      allow write: if false;
    }
  }
}
